<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000">


    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_V" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gas"
        android:id="@+id/imageView4"
        android:layout_below="@+id/resultado"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Distancia Percorrida"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/btnConsumo"
        android:textSize="14sp"
        android:layout_below="@+id/btnValor"
        android:layout_alignStart="@+id/btnValor"
        android:layout_width="160dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:background="#fff"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/lblConsumo"
        android:layout_alignBottom="@+id/btnConsumo"
        android:layout_alignStart="@+id/lblValor"
        android:layout_alignTop="@+id/btnConsumo" />

    <EditText
        android:background="#fff"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:ems="10"
        android:id="@+id/lblResultado"
        android:layout_above="@+id/imageView4"
        android:layout_alignStart="@+id/lblConsumo"
        android:layout_alignTop="@+id/resultado"
        android:enabled="false"
        android:inputType="none" />

    <EditText
        android:background="#fff"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/lblValor"
        android:layout_above="@+id/btnConsumo"
        android:layout_toEndOf="@+id/btnValor"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/btnValor" />

    <Button
        android:text="Resultado"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/resultado"
        android:textSize="14sp"
        android:layout_marginStart="19dp"
        android:layout_width="160dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/btnConsumo"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Km/Litro"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/btnValor"
        android:textSize="14sp"
        android:layout_width="160dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/resultado" />

    <TextView
        android:text="Consumo de Combustivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:id="@+id/textView5"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>